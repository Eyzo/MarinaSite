{% extends '::layout/layout-administration.html.twig' %}

{% block body -%}
    <h1>Categories list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th style="float: right;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>
                <ul>
                    <li>
                        <a style="margin-left:10px;float: right;" class="button-info" href="{{ path('admin_categories_show', { 'id': entity.id }) }}">regarder</a>
                    </li>
                    <li>
                        <a class="button-success" style="float: right;" href="{{ path('admin_categories_edit', { 'id': entity.id }) }}">editer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="button" href="{{ path('admin_categories_new') }}">
                Créer une nouvelle catégorie
            </a>
        </li>
    </ul>
    {% endblock %}
