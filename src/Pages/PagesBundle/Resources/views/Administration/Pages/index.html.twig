{% extends '::layout/layout-administration.html.twig' %}

{% block body %}
    <h1>Pages Administration</h1>

    <div class="container">
    <div class="col-12">

        {% for flash in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ flash }}</div>
        {% endfor %}
        {% for flash in app.session.flashbag.get('error') %}
            <div class="alert alert-error">{{ flash }}</div>
        {% endfor %}

        <form>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th class="pull-right">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('adminPages_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.titre }}</td>
                            <td>
                                <ul class="pull-right" style="list-style: none;margin-left: 0px;">
                                    <li style="display: inline-block;">
                                        <a  class="button-info" href="{{ path('adminPages_show', { 'id': entity.id }) }}">regarder</a>
                                    </li>
                                    <li style="display: inline-block">
                                        <a class="button-success" href="{{ path('adminPages_edit', { 'id': entity.id }) }}">editer</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </form>

        <ul style="list-style: none; margin-left: 0px;">
            <li>
                <a class="button" href="{{ path('adminPages_new') }}">
                    Creer une nouvelle page
                </a>
            </li>
        </ul>

    </div>
    </div>
    {% endblock %}
