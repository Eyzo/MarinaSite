<html>
	<head>
		<meta charset="utf-8" />
		<title>{% block titre %}Fromagerie Christophe{% endblock %}</title>
		<meta name="keywords" content="{% block motsCles %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="{{ asset('css/main.css') }}" />
		<link rel="stylesheet" href="{{ asset('css/css.css') }}" />
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		<link rel="stylesheet" href="{{ asset('css/pagination/style.css') }}">
		<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
		{% block stylesheets %}{% endblock %}
	</head>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header" style="padding: 0px;">

	

					<!-- Nav -->
						<nav id="nav">
							<ul id="nav-liste">
								
								<li class="current">
									<a href="{{ path('produits') }}">Nos Fromages</a>
									<ul>
										{% render(controller('EcommerceBundle:Categories:menu')) %}
									</ul>
								</li>
								<li class="current"><a href="{{ path('cartePages') }}">Où nous trouver</a></li>
								<li class="current"><a  href="{{ path('contactPages') }}">Contact</a></li>
								<li class="current">
									{% if is_granted('IS_AUTHENTICATED_FULLY') %}
										<a href="{{ path('facture') }}"><i class="fas fa-user"></i> Mon compte</a>
										<ul>
											

								          {% include('UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig') %}

										</ul>
							        {% else %}
							            	<a href="{{ path('fos_user_security_login') }}"><i class="fas fa-user"></i> Identifiez vous</a>
										<ul>
							                {% include("UtilisateursBundle:Default:modulesUsed/utilisateurs.html.twig") %}
										</ul>
							            {% endif %}
									
								</li>
								
								{% render(controller('EcommerceBundle:Panier:menu')) %}

								<li>{% render(controller('EcommerceBundle:Produit:recherche')) %}</li>

							</ul>
							
						</nav>

					<!-- Banner -->
						<section id="banner">
							<a href="{{ path('produits') }}">
							<header>
								
									<h2>La Fromagerie Christophe enfin en ligne !</h2>
									<p>Venez découvrir nos Fromages !</p>
								
							</header>
							</a>
						</section>

				</section>

			<!-- Main -->
				<section id="main">
					<div class="container">
						<div class="row">
							<div class="col-12">

								<!-- Portfolio -->
									<section>

										{% block body %}{% endblock %}
										
									</section>

							</div>
						</div>
					</div>
				</section>

			<!-- Footer -->
				<section id="footer">
					<div class="container">
						<div class="row">
							<div class="col-4 col-6-medium col-12-small">
								<section>
									<header>
										<h2>Informations</h2>
									</header>
									<ul class="divided">
										{{ render(controller('PagesBundle:Pages:menu')) }}
									</ul>
								</section>
							</div>
							<div class="col-4 col-6-medium col-12-small">
								<section>
									<header>
										<h2>Catégories</h2>
									</header>
									<ul class="divided">
										{% render(controller('EcommerceBundle:Categories:menu')) %}
									</ul>
								</section>
							</div>
							<div class="col-4 col-12-medium">
								<section>
									<header>
										<h2>Nos réseaux sociaux</h2>
									</header>
									<ul class="social">
										<li><a class="icon fa-facebook" href="https://www.facebook.com/Fruity.Wines"><span class="label">Facebook</span></a></li>
									</ul>
								</section>
							</div>
						</div>
							<div class="col-12">
								<ul class="contact">
									<li style="display: inline-block;">
										<h3><i class="fas fa-map-marker"></i> Notre entrepôt :</h3>
                                        <p style="margin-left: 40px;">&nbsp;{{ adresse }}</p>
									</li>
									<li style="display: inline-block; margin-left: 40px;">
										<h3><i class="fas fa-phone"></i> Nous contacter :</h3>
                                        <p style="margin-left: 40px;">&nbsp;{{ telephone }}</p>
									</li>
									<li style="display: inline-block; margin-left: 40px;">
										<h3><i class="fas fa-envelope"></i> Mail :</h3>
                                        <p>&nbsp;{{ mail }}</p>
									</li>
								</ul>
							</div>
							<div class="col-12">

								<!-- Copyright -->
									<div id="copyright">
										<ul class="links">
											<li>&copy; Copyright {{ "now"|date("Y") }} - Fromagerie Christophe</li>
										</ul>
									</div>

							</div>
						
					</div>
				</section>

		</div>

		<!-- Scripts -->
			<script src="{{ asset('js/jquery.min.js') }}"></script>
			<script src="{{ asset('js/jquery.dropotron.min.js') }}"></script>
			<script src="{{ asset('js/browser.min.js') }}"></script>
			<script src="{{ asset('js/breakpoints.min.js') }}"></script>
			<script src="{{ asset('js/util.js') }}"></script>
			<script src="{{ asset('js/main.js') }}"></script>
			<script src="https://js.stripe.com/v3/"></script>
    		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
			<script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
			<script type="text/javascript" src="{{ asset('js/table.js') }}"></script>
    		{% block javascripts %}{% endblock %}

	</body>
</html>